<html>
  <head>
    <title>Bookmark Manager</title>
  </head>

  <body>
    <% if flash[:errors] && !flash[:errors].empty? %>
      Errors:
      <ul id='errors'>
        <% flash[:errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %> 
    <% if current_user %>
     Welcome, <%= current_user.name %>!
    <% end %>
    <%= yield %>
  </body>
</html>
